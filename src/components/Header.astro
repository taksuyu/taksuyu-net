---
import presentation from '@/data/presentation';

const pathname = Astro.url.pathname;
---

<header class="z-40 flex w-full flex-col gap-2 md:flex-row md:justify-between">
  <a href={`mailto:${presentation.mail}`}
    class="hover:text-primary-foreground"
  >
    {presentation.mail}
  </a>

  <nav role="navigation">
    <ul role="list" class="flex flex-row gap-2">
      <li>
        <a href="/" class:list={{
          ["hover:text-primary-foreground"]: true,
          ["text-primary-foreground"]: pathname === '/',
        }}>Home</a>
      </li>
    </ul>
  </nav>
</header>